<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top border -->
    <item>
        <shape>
            <solid android:color="#808080"/> <!-- Grey color for the top border -->
            <size android:height="2dp"/> <!-- Thickness of the top border -->
        </shape>
    </item>

    <!-- Main content background -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color of the item -->
        </shape>
    </item>
</layer-list>
